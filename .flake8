[flake8]
# Flake8 Configuration

max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    data/raw,
    data/processed,
    data/metadata

# Ignore specific errors
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504,  # line break after binary operator

per-file-ignores =
    __init__.py:F401

# Count errors and warnings
count = True
statistics = True
